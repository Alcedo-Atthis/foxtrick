{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch FF",
			"type": "firefox",
			"request": "launch",
			"reAttach": true,
			"reloadOnAttach": true,
			"reloadOnChange": {
				"watch": [
					"${workspaceFolder}/**/*.css",
					"${workspaceFolder}/**/*.html",
					"${workspaceFolder}/**/*.js",
					"${workspaceFolder}/**/*.json",
					"${workspaceFolder}/**/*.yml",
					"${workspaceFolder}/defaults/preferences/*",
				],
				"ignore": [
					"${workspaceFolder}/.vscode/**/*",
					"${workspaceFolder}/content/locale/**/*",
					"${workspaceFolder}/maintainer/**/*",
				],
			},
			"addonPath": "${workspaceFolder}",
			"firefoxArgs": [
				"about:debugging#/runtime/this-firefox",
				"about:addons",
				"https://stage.hattrick.org/Default.aspx",
			],
			"popupAutohideButton": false,
			"skipFiles": [
				"http?(s):/**",
			],
			// "keepProfileChanges": true,
			// "log": {
			// 	"consoleLevel": {
			// 		"PathConversion": "Debug",
			// 		"default": "Error"
			// 	}
			// },
		},

		{
			"name": "Launch FF permanent",
			"type": "firefox",
			"request": "launch",
			"reAttach": true,
			"reloadOnAttach": true,
			"reloadOnChange":{
				"watch": [
					"${workspaceFolder}/**/*.css",
					"${workspaceFolder}/**/*.html",
					"${workspaceFolder}/**/*.js",
					"${workspaceFolder}/**/*.json",
					"${workspaceFolder}/**/*.yml",
					"${workspaceFolder}/defaults/preferences/*",
				],
				"ignore": [
					"${workspaceFolder}/.vscode/**/*",
					"${workspaceFolder}/content/locale/**/*",
					"${workspaceFolder}/maintainer/**/*",
				],
			},
			"pathMappings": [
				{
					"url": "moz-extension://cf276d29-81e6-4f14-9126-c14d1bf9e59f/",
					"path": "${workspaceFolder}/"
				},
			],

			"firefoxArgs": [
				"about:debugging#/runtime/this-firefox",
				"about:addons",
			],
			"url": "https://stage.hattrick.org/Default.aspx",

			// "popupAutohideButton": false, // => ui.popup.disable_autohide

			"skipFiles": [
				"http?(s):/**",
			],

			"keepProfileChanges": true,

			// "log": {
			// 	"consoleLevel": {
			// 		"PathConversion": "Debug",
			// 		"default": "Error"
			// 	}
			// },
		},
	]
}
