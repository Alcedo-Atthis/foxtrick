{
    "compilerOptions": {
        "target": "esnext",
        "noImplicitAny": false,
        "noImplicitThis": false,
        "strictBindCallApply": true,
        "strictFunctionTypes": true,
        "strictNullChecks": false,
        "checkJs": true,
    },
    "typeAcquisition": {
        "include": [
            "chrome",
            "firefox-webext-browser",
            "safari-extension",
            "safari-extension-content",
            "jquery",
        ]
    },
    "include": [
        "content",

        // tsc excludes/includes suck
        // "content/lib/psico.js",
    ],
    "exclude": [
        // tsc excludes/includes suck
        // "content/lib",

        "content/lib/gauge.js",
        "content/lib/idbstore.js",
        "content/lib/indexedDB.polyfill.js",
        "content/lib/jquery.js",
        "content/lib/oauth.js",
        "content/lib/PluralForm.js",
        "content/lib/sha1.js",
        "content/lib/yaml.js",
    ],
}
